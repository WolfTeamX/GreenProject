      </div>
    </div>
  </div>
</section>
<section class="no-padding">
  <div class="main-header">
    <div class="header-hover">
      <h1 class="title">Tu dzia≈Çamy</h1>
      <hr class="thematic-break">
    </div>
  </div>
  <div class="voivodeships">
    <% @voivodeships.in_groups_of(3, false).each do |group| %>
      <div class="row">
        <% group.each do |voivodeship| %>
          <div class="thirty">
            <div class="container">
              <%= image_tag rails_blob_path(voivodeship.image) if voivodeship.image.attached? %>
              <h2><%= voivodeship.name %></h2>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</section>
