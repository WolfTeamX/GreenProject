<div class="slideshow-container">
  <% if user_signed_in? %>
    <%= link_to manage_slides_path do %>
      <div class="side-control">
        <p>Zarządzaj<br>slajdami</p>
      </div>
    <% end %>
  <% end %>
  <% @slides.each do |slide| %>
    <div class="slide transparent">
      <% if slide.image.attached? %>
        <%= image_tag rails_blob_path(slide.image), class: "background-image" %>
      <% end %>
      <div class="slide-banner">
        <div class="slide-box">
          <h3><%= slide.title %></h3>
          <p><%= slide.content %></p>
          <%= link_to "Edytuj bieżący slajd", edit_slide_path(slide), class: "button button-success" if user_signed_in? %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div style="text-align:center;">
  <% @slides.each do %>
    <span class="dot"></span>
  <% end %>
</div>
