<section class="no-padding">
  <div class="main-header no-transform">
    <div class="header-hover">
      <h2>Inne informacje</h2>
      <hr class="thematic-break">
    </div>
  </div>
  <% @icons.in_groups_of(2, false).each do |group| %>
    <div class="row">
      <% group.each do |icon| %>
        <div class="icon-box">
          <%= link_to icon.link, class: "no-link" do %>
            <% if icon.image.attached? %>
              <%= image_tag rails_blob_path(icon.image), class: "icon" %>
            <% end %>
            <h4><%= icon.title %></h4>
            <p><%= icon.description %></p>
          <% end %>
          <%= link_to "Edytuj ikonkę", edit_icon_path(icon), class: "button button-success" if user_signed_in? %>
        </div>
      <% end %>
    </div>
  <% end %>
</section>