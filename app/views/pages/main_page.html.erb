<div class="slideshow-container">
  <% @slides.each do |slide| %>
  <div class="slide transparent">
    <%= image_tag rails_blob_path(slide.image), class: "background-image" %>
    <div class="slide-banner">
      <div class="slide-box">
        <h3><%= slide.title %></h3>
        <p><%= slide.content %></p>
      </div>
    </div>
  </div>
  <% end %>
</div>
<div style="text-align:center;">
  <% @slides.each do %>
    <span class="dot"></span>
  <% end %>
</div>
<section>
  <div class="main-header">
    <div class="header-hover">
      <h2>Nasza Oferta</h2>
      <hr class="thematic-break">
    </div>
  </div>
  <div class="row space-around">
    <% offer = @offers.first %>
     <div class="box">
       <div class="square">
         <div class="border2">
         </div>
         <%= image_tag rails_blob_path(offer.image) %>
       </div>
       <h3><%= offer.title %></h3>
       <hr>
       <p><%= offer.description %></p>
       <%= link_to "Zobacz więcej...", about_photovoltaics_path, class: "underline" %>
     </div>
    <% offer = @offers.second %>
      <div class="box">
        <div class="square">
          <div class="border2">
          </div>
          <%= image_tag rails_blob_path(offer.image) %>
        </div>
        <h3><%= offer.title %></h3>
        <hr>
        <p><%= offer.description %></p>
        <%= link_to "Zobacz więcej...", about_heat_pump_path, class: "underline" %>
      </div>
    <% offer = @offers.third %>
      <div class="box">
        <div class="square">
          <div class="border2">
          </div>
          <%= image_tag rails_blob_path(offer.image) %>
        </div>
        <h3><%= offer.title %></h3>
        <hr>
        <p><%= offer.description %></p>
        <%= link_to "Zobacz więcej...", about_air_conditioning_path, class: "underline" %>
      </div>
  </div>
</section>
<div class="images-container">
  <div class="row">
    <% image = @images.first %>
      <div class="image-box left">
        <div class="img-wrapper left">
          <%= image_tag rails_blob_path(image.image) %>
        </div>
        <div class="box-text">
          <%= image_tag("icons/house-light.png", :alt => "House") %>
          <h2><%= image.text %></h2>
        </div>
      </div>
    <div class="image-border">
    </div>
    <% image = @images.second %>
    <div class="image-box center no-overflow">
      <div class="img-wrapper center">
        <%= image_tag rails_blob_path(image.image) %>
      </div>
      <div class="box-text">
        <%= image_tag("icons/company-light.png", :alt => "Company") %>
        <h2><%= image.text %></h2>
      </div>
    </div>
    <div class="image-border">
    </div>
    <% image = @images.third %>
    <div class="image-box right">
      <div class="img-wrapper right">
        <%= image_tag rails_blob_path(image.image) %>
      </div>
      <div class="box-text">
        <%= image_tag("icons/farm-light.png", :alt => "Farm") %>
        <h2><%= image.text %></h2>
      </div>
    </div>
  </div>
</div>
<section class="no-padding">
  <div class="main-header no-transform">
    <div class="header-hover">
      <h2>Inne informacje</h2>
      <hr class="thematic-break">
    </div>
  </div>
  <% @icons.in_groups_of(2, false).each do |group| %>
   <div class="row">
     <% group.each do |icon| %>
      <div class="icon-box">
        <%= image_tag rails_blob_path(icon.image), class: "icon" %>
        <h4><%= icon.title %></h4>
        <p><%= icon.description %></p>
      </div>
     <% end %>
   </div>
  <% end %>
</section>