  </div>
</section>
<section class="no-padding">
  <div class="row">
      <div class="offer-down header-hover">
        <h1>Jesteś zainteresowany?</h1>
        <hr class="thematic-break">
        <%= button_to "Skontaktuj się z nami!", contact_path, class: "ghost-button" %>
      </div>
  </div>
</section>
