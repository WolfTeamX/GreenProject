<div class="admin-edit">
  <h1>Edytuj stopkę</h1>
  <hr><br>
  <p><%= @footer.description %></p><br>
  <% if @footer.image.attached? %>
    <%= image_tag rails_blob_path(@footer.image), class: "slide-image" %>
  <% end %>
  <br><hr><br>
  <br>
  <%= form_with url: update_footer_path, model: @footer do |f| %>
    <p>Opis:</p><br>
    <%= f.text_field :description %><br><br>
    <p>Tło:</p><br>
    <%= f.file_field :image, direct_upload: true %><br><br>
    <%= f.submit "Zapisz pytanie", class: "button button-success" %>
  <% end %>
</div>