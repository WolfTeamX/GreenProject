<div class="admin-edit">
  <h1>Stwórz nową realizcję</h1>
  <p>Możesz też dodać kilka realizacji naraz</p>
  <hr>
  <%= form_with url: create_realization_path do |f| %>
    <p>Dodaj zdjęcie/zdjęcia:</p><br>
    <%= f.file_field :image, multiple: true, direct_upload: true %><br><br><br>
    <%= f.label "Wybierz kategorię:" %><br><br>
    <%= f.select :category, options_for_select(@categories), {}, {:class => "select-css" } %><br><br>
    <%= f.submit "Dodaj realizację", class: "button button-success" %>
  <% end %>
</div>