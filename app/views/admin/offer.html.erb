<div class="page-cover">
  <%= link_to manage_slides_path do %>
    <div class="side-control">
      <p>Zmień<br>zdjęcie</p>
    </div>
  <% end %>
  <div class="cut-in">
    <%= image_tag "allow/panels_cover.jpeg" %>
  </div>
  <div class="header-text">
    <div class="header-background">
      Nasza oferta
    </div>
    <div id="scroll-arrow" class="arrow-hover">
      <i class="arrow"></i>
    </div>
  </div>
</div>
<section class="no-padding no-margin smoke-section">
  <div class="main-header">
    <div id="scroll-target" class="header-hover">
      <h2>Oto rozwiązania jakie proponujemy</h2>
      <hr class="thematic-break">
    </div>
  </div>
</section>
<% offer = @offers.first %>
<section class="no-padding no-margin">
  <div class="row offer-height">
    <div class="fifty no-padding">
      <div class="offer align-left">
        <h4><%= offer.header %></h4>
        <h2><%= offer.title %></h2>
        <hr class="float-left">
        <p><%= offer.content %></p>
        <%= link_to "O fotowoltaice...", about_photovoltaics_path, class: "ghost-button" %>
        <%= link_to "Edytuj ofertę", edit_offer_paragraph_path(offer.id), class: "ghost-button" %>
      </div>
    </div>
    <div class="fifty no-padding offer-height">
      <%= image_tag rails_blob_path(offer.image), class: "offer-img offer-height" if offer.image.attached? %>
    </div>
  </div>
</section>
